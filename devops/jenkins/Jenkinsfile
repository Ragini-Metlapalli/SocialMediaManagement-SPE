pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = "raginimetlapalli/social-media-engagement"
        KUBECONFIG_ID = "k8s-config"
        IMAGE_TAG = "v${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test Backend') {
            steps {
                script {
                    // Optimized: Use Docker BuildKit caching.
                    // This builds the 'test' stage. If 'requirements.txt' is unchanged, 
                    // the 'pip install' layer is retrieved from cache instantly.
                    sh 'docker build --target test -t backend-test ./backend'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    sh 'docker build -t ${DOCKER_HUB_REPO}-frontend:${IMAGE_TAG} ./frontend'
                    sh 'docker build -t ${DOCKER_HUB_REPO}-backend:${IMAGE_TAG} ./backend'
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry(credentialsId: 'dockerhub-creds', url: '') {
                    sh 'docker push ${DOCKER_HUB_REPO}-frontend:${IMAGE_TAG}'
                    sh 'docker push ${DOCKER_HUB_REPO}-backend:${IMAGE_TAG}'

                    // Also push 'latest' so Ansible default works, or for general ease of use
                    sh 'docker tag ${DOCKER_HUB_REPO}-frontend:${IMAGE_TAG} ${DOCKER_HUB_REPO}-frontend:latest'
                    sh 'docker tag ${DOCKER_HUB_REPO}-backend:${IMAGE_TAG} ${DOCKER_HUB_REPO}-backend:latest'
                    sh 'docker push ${DOCKER_HUB_REPO}-frontend:latest'
                    sh 'docker push ${DOCKER_HUB_REPO}-backend:latest'
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                     withKubeConfig([credentialsId: "${KUBECONFIG_ID}"]) {
                         sh "sed -i 's/latest/${IMAGE_TAG}/g' devops/kubernetes/backend-deployment.yaml"
                         sh "sed -i 's/latest/${IMAGE_TAG}/g' devops/kubernetes/frontend-deployment.yaml"                         
                         
                         // STEP 1: DEPLOY INFRASTRUCTURE (Vault)
                         sh 'kubectl apply -f devops/kubernetes/vault.yaml'
                         echo "Waiting for Vault to be ready..."
                         sh 'kubectl rollout status deployment/vault --timeout=300s'
                         
                         // STEP 2: SEED VAULT (Store Secrets)
                         // We authenticate using the 'vault-token' credential 
                         withCredentials([string(credentialsId: 'vault-password', variable: 'VAULT_TOKEN')]) {
                             withCredentials([string(credentialsId: 'db-password', variable: 'DB_PASS_INPUT')]) {
                                 sh """
                                     # Using VAULT_TOKEN to authenticate the write operation
                                     # We use 'secret/postgres' as requested
                                     kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv put secret/postgres \\
                                         username="postgres" \\
                                         password="\${DB_PASS_INPUT}" \\
                                         host="postgres" \\
                                         port="5432" \\
                                         dbname="prediction_db"
                                 """
                             }
                         }

                         // STEP 3: FETCH FROM VAULT & INJECT INTO K8S
                         withCredentials([string(credentialsId: 'vault-password', variable: 'VAULT_TOKEN')]) {
                             sh """
                                 echo "Fetching secrets from Vault (secret/postgres)..."
                                 # authenticated fetch
                                 DB_USER=\$(kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv get -field=username secret/postgres)
                                 DB_PASS=\$(kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv get -field=password secret/postgres)
                                 DB_HOST=\$(kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv get -field=host secret/postgres)
                                 DB_PORT=\$(kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv get -field=port secret/postgres)
                                 DB_NAME=\$(kubectl exec deployment/vault -- env VAULT_TOKEN=\$VAULT_TOKEN vault kv get -field=dbname secret/postgres)

                                 echo "Creating Kubernetes Secret 'db-secrets'..."
                                 kubectl create secret generic db-secrets \\
                                     --from-literal=username=\$DB_USER \\
                                     --from-literal=password=\$DB_PASS \\
                                     --from-literal=host=\$DB_HOST \\
                                     --from-literal=port=\$DB_PORT \\
                                     --from-literal=dbname=\$DB_NAME \\
                                     --dry-run=client -o yaml | kubectl apply -f -
                             """
                         }

                         // STEP 4: DEPLOY APPLICATIONS
                         sh 'kubectl apply -f devops/kubernetes/postgres-pvc.yaml'
                         // postgres.yaml uses the 'postgres-secret' object we just created in Step 3.
                         sh 'kubectl apply -f devops/kubernetes/postgres.yaml'
                         
                         // Backend, Frontend, HPA, Logging...
                         sh 'kubectl apply -f devops/kubernetes/backend-deployment.yaml'
                         sh 'kubectl apply -f devops/kubernetes/frontend-deployment.yaml'
                         sh 'kubectl apply -f devops/kubernetes/backend-service.yaml'
                         sh 'kubectl apply -f devops/kubernetes/frontend-service.yaml'
                         sh 'kubectl apply -f devops/kubernetes/backend-hpa.yaml'
                         sh 'kubectl apply -f devops/kubernetes/backend-hpa.yaml'
                         sh 'kubectl apply -f devops/kubernetes/logging/'

                         // VERIFICATION: Wait for pods to be ready (prevents false success)
                         echo "Waiting for Backend to allow traffic"
                         sh 'kubectl rollout status deployment/social-media-backend --timeout=1200s'
                         
                         echo "Waiting for Frontend to be ready"
                         sh 'kubectl rollout status deployment/social-media-frontend --timeout=300s'
                    }
                }
            }
        }

        stage('Deploy with Ansible') {
            steps {
                script {
                     // Run Ansible to pull new images and restart containers
                     // We use '--tags deploy' to skip checking for Docker installation (efficiency)
                     // We inject the SSH password safely from Jenkins Credentials
                     withCredentials([string(credentialsId: 'host-ssh-pass', variable: 'SSH_PASS')]) {
                         dir('devops/ansible') {
                             sh "ansible-playbook -i inventory.ini playbook.yaml --tags 'deploy' --extra-vars 'image_tag=${IMAGE_TAG} ansible_ssh_pass=${SSH_PASS} ansible_sudo_pass=${SSH_PASS}'"
                         }
                     }
                }
            }
        }
    }
}
